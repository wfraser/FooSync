<Window x:Class="FooSync.WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:foo="clr-namespace:FooSync.WPFApp"
        Title="FooSync" Height="430" Width="700" Icon="/FooSync;component/Resources/loki_128.png"
        Closed="Window_Closed">
    <Window.Resources>
        <foo:NullDateTimeConverter x:Key="NullDateTimeConverter"/>
        <foo:NullDateTimeItalicConverter x:Key="NullDateTimeItalicConverter"/>
        <foo:FileOperationValueConverter x:Key="FileOperationValueConverter"/>
        
        <ControlTemplate x:Key="FileGrid" TargetType="{x:Type ListView}">
            <ListView ItemsSource="{Binding Path=.}">
                <ListView.View>
                    <GridView>
                        
                        <GridViewColumn Header="Filename">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Filename}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        
                        <GridViewColumn Header="Repository Date">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RepositoryDate, Converter={StaticResource NullDateTimeConverter}}"
                                               FontStyle="{Binding RepositoryDate, Converter={StaticResource NullDateTimeItalicConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>   
                        
                        <GridViewColumn Header="Action">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Action, Converter={StaticResource FileOperationValueConverter}}"
                                            Command="foo:MainWindow.ActionClick" CommandParameter="{Binding Filename}"
                                            HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        
                        <GridViewColumn Header="Source Date">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding SourceDate, Converter={StaticResource NullDateTimeConverter}}"
                                               FontStyle="{Binding SourceDate, Converter={StaticResource NullDateTimeItalicConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        
                    </GridView>
                </ListView.View>
            </ListView>
        </ControlTemplate>
    </Window.Resources>
    
    <Window.CommandBindings>
        <CommandBinding Command="foo:MainWindow.ActionClick" Executed="OnActionClick"/>
    </Window.CommandBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <ToolBar Grid.Row="0" Grid.ColumnSpan="3">
            <Button ToolTip="New Repository" Click="NewRepository">
                <Image Source="/FooSync;component/Resources/loki_128.png" Width="16" Height="16"/>
            </Button>
            <Button ToolTip="Open Repository" Click="OpenRepository">
                <Image Source="/FooSync;component/Resources/loki_128.png" Width="16" Height="16"/>
            </Button>
            <Button ToolTip="About" ToolBar.OverflowMode="Always" Click="ShowAboutWindow">
                <Image Source="/FooSync;component/Resources/loki_128.png" Width="16" Height="16"/>
            </Button>
        </ToolBar>
        
        <Label Grid.Row="1" Grid.Column="0" Content="Subirectory: "/>
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="DirectorySelector" SelectionChanged="DirectorySelector_SelectionChanged" />
        <Button x:Name="InspectButton" Grid.Row="1" Grid.Column="2" Click="Inspect" Content="Inspect Files" IsEnabled="False"/>
        
        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" x:Name="FilesPanel">
            <Expander Header="New Files:" IsExpanded="False">
                <ListView Template="{StaticResource FileGrid}" x:Name="NewFiles" ItemsSource="{Binding Path=.}"/>
            </Expander>
            <Expander Header="Changed Files:" IsExpanded="False">
                <ListView Template="{StaticResource FileGrid}" x:Name="ChangedFiles" ItemsSource="{Binding Path=.}"/>
            </Expander>
            <Expander Header="Deleted Files:" IsExpanded="False">
                <ListView Template="{StaticResource FileGrid}" x:Name="DeletedFiles" ItemsSource="{Binding Path=.}"/>
            </Expander>
        </StackPanel>
        
        <Button x:Name="DoActionsButton" Grid.Row="3" Grid.ColumnSpan="3" Content="Do Actions" VerticalAlignment="Bottom" IsEnabled="False"/>
    </Grid>
</Window>