<Window x:Class="FooSync.WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:foo="clr-namespace:FooSync.WPFApp"
        Title="FooSync" Height="430" Width="700" Icon="/FooSync;component/Resources/loki_128.png"
        Closed="Window_Closed">
    <Window.Resources>
        <ControlTemplate x:Key="FileGrid" TargetType="{x:Type ListView}">
            <ListView ItemsSource="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Filename" DisplayMemberBinding="{Binding Filename}"/>
                        <GridViewColumn Header="Repository Date" DisplayMemberBinding="{Binding RepositoryDate}"/>
                        <GridViewColumn Header="Action" DisplayMemberBinding="{Binding Action}"/>
                        <GridViewColumn Header="Source Date" DisplayMemberBinding="{Binding SourceDate}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <ToolBar Grid.Row="0" Grid.ColumnSpan="3">
            <Button ToolTip="New Repository" Click="NewRepository">
                <Image Source="/FooSync;component/Resources/loki_128.png" Width="16" Height="16"/>
            </Button>
            <Button ToolTip="Open Repository" Click="OpenRepository">
                <Image Source="/FooSync;component/Resources/loki_128.png" Width="16" Height="16"/>
            </Button>
            <Button ToolTip="About" ToolBar.OverflowMode="Always" Click="ShowAboutWindow">
                <Image Source="/FooSync;component/Resources/loki_128.png" Width="16" Height="16"/>
            </Button>
        </ToolBar>
        <Label Grid.Row="1" Grid.Column="0" Content="Directory: "/>
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="DirectorySelector" SelectionChanged="DirectorySelector_SelectionChanged" />
        <Button x:Name="InspectButton" Grid.Row="1" Grid.Column="2" Click="Inspect" Content="Inspect Files" IsEnabled="False"/>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="3">
            <Expander Header="New Files:" IsExpanded="False">
                <ListView Template="{StaticResource FileGrid}" x:Name="NewFiles"/>
                <!--
                <ListView x:Name="NewFiles">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Filename" DisplayMemberBinding="{Binding Filename}"/>
                            <GridViewColumn Header="Repository Date" DisplayMemberBinding="{Binding RepositoryDate}"/>
                            <GridViewColumn Header="Action" DisplayMemberBinding="{Binding Action}"/>
                            <GridViewColumn Header="Source Date" DisplayMemberBinding="{Binding SourceDate}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                -->
            </Expander>
            <Expander Header="Changed Files:" IsExpanded="False">
                <ListView Template="{StaticResource FileGrid}" x:Name="ChangedFiles"/>
            </Expander>
            <Expander Header="Deleted Files:" IsExpanded="False">
                <ListView Template="{StaticResource FileGrid}" x:Name="DeletedFiles"/>
            </Expander>
        </StackPanel>
        <Button x:Name="DoActionsButton" Grid.Row="3" Grid.ColumnSpan="3" Content="Do Actions" VerticalAlignment="Bottom" IsEnabled="False"/>
    </Grid>
</Window>