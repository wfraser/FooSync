<Window x:Class="Codewise.FooSync.WPFApp.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resx="clr-namespace:Codewise.FooSync.WPFApp.Properties"
        xmlns:foo="clr-namespace:Codewise.FooSync.WPFApp"
        Title="StartWindow" Height="170" Width="359">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="10,5,10,0" Content="Select an action to begin:"/>
        <foo:ImageTextButton x:Name="NewButton"
                             Grid.Column="0" Grid.Row="1" 
                             Content="New Repository" 
                             ImageSource="/FooSync;component/Resources/newfldr_64x64x32.png"
                             Margin="10"
                             Click="CloseWindow"/>
        <foo:ImageTextButton x:Name="OpenButton"
                             Grid.Column="1" Grid.Row="1" 
                             Content="Open Existing Repository" 
                             ImageSource="/FooSync;component/Resources/folder_open_64x64x32.png"
                             Margin="10"
                             Click="CloseWindow"/>
    </Grid>
</Window>
