<Application x:Class="FooSync.WPFApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate x:Key="FileGrid" TargetType="{x:Type ListView}">
            <ListView>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Filename"/>
                        <GridViewColumn Header="Repository Date"/>
                        <GridViewColumn Header="Action"/>
                        <GridViewColumn Header="Source Date"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </ControlTemplate>
    </Application.Resources>
</Application>
